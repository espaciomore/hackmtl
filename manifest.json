{
  "manifest_version": 2,

  "name": "Let Me Know",
  "description": "This extension is the standalone version.",
  "version": "0.0",

  "browser_action": {
    "default_icon": {               
      "19": "images/bells/bell_19_yellow.png",
      "38": "images/bells/bell_38_yellow.png"
    },
    "default_title": "Let Me Know",
    "default_popup": "html/popup.html"
  },

  "background": {
  	"page": "html/background.html"
  }, 
  "content_scripts": [
    {
   	  "matches": ["<all_urls>"],
      "js": [
      	"js/jquery-min.js",
        "js/messenger.js",
      	"js/foreground.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "notifications"
  ]
}
